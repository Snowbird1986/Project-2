<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>Road to Bethlehem Scheduler!</h2>
        <form class="clearfix mb-4">
          <div class="form-group">
            <label for="reserve-date">Create Reservation</label>
            <select class="form-control form-control-lg" id="reserve-text" aria-describedby="reserve-date" placeholder="Choose a date for reservation">
                {{#each times}}
                  <option data-date="{{this.dataValues.beginDate}}">{{this.dataValues.beginDate}}+" : "+{{this.dataValues.startTime}}</option>
                {{/each}}
            </select>
          </div>
          <button id="createSubmit" class="btn btn-primary float-right">Submit</button>
        </form>

        <form class="clearfix mb-4">
          <div class="form-group">
            <label for="email-text">Look Up Reservation</label>
            <input type="text" id="email-text" class="form-control" aria-describedby="email-text" placeholder="Enter Email">
          </div>
          <button id="emailSubmit" class="btn btn-primary float-right">Submit</button>
        </form>
        
        <form class="clearfix mb-4">
          <div class="form-group">
            <label for="example-text">Admin - Time Slot Search</label>
            <select class="form-control form-control-lg" id="reserve-text" aria-describedby="reserve-date" placeholder="Choose a date for reservation">
                {{#each times}}
                  <option data-TimeID="{{this.dataValues.id}}">{{this.dataValues.beginDate}}+" : "+{{this.dataValues.startTime}}</option>
                {{/each}}
            </select>
          </div>
          <button id="adminSubmit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
